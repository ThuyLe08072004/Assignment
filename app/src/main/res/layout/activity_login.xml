<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:padding="16dp"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_chaomungbandatrolai"
        android:textSize="20sp"
        android:textColor="#2196F3" />.
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="@string/txt_dangnhapdetieptuc"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#15181B" />.
    <EditText
        android:id="@+id/edt_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập Username"/>.
    <EditText
        android:id="@+id/edt_nhappassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="@string/nhappass"/>.
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_dangnhap"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="#4CAF50"
            android:textAllCaps="true"
            android:layout_marginRight="10dp"
            android:text="Đăng nhập"/>

        <Button
            android:id="@+id/btn_trove"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800"
            android:textAllCaps="true"
            android:text="Trở về"/>

    </LinearLayout>

</LinearLayout>